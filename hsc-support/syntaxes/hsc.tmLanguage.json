{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "HSC",
    "scopeName": "src.hsc",
    "patterns": [
        {
            "name": "comment.line.double-slash.hsc",
            "begin": "//",
            "end": "$"
        },
        {
            "name": "comment.line.double-slash",
            "match": "//.*$"
        },
        {
            "name": "comment.block.documentation",
            "begin": "/\\*",
            "end": "\\*/"
        },
        {
            "name": "keyword.control.preprocessor.hsc",
            "begin": "!",
            "end": "$"
        },
        {
            "name": "keyword.control.flow.hsc",
            "match": "\\b(if|else|for|while|const|return|r|MAIN)\\b"
        },
        {
            "name": "storage.type.hsc",
            "match": "\\b(int|i|float|f|double|d|char|c|string|s|long|l|long\\s+int|li|long\\s+long|ll|unsigned|u|unsigned\\s+int|ui|unsigned\\s+long\\s+long|ull)\\b"
        },
        {
            "name": "support.function.hsc",
            "match": "\\b(in|out|console\\.out|time\\.now)\\b"
        },
        {
            "name": "keyword.operator.hsc",
            "match": "[&*^=+\\-/%<>!|]+"
        },
        {
            "name": "constant.numeric.hsc",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
            "name": "string.quoted.double.hsc",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "string.quoted.single.hsc",
            "begin": "'",
            "end": "'"
        },
        {
            "name": "variable.other.hsc",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
    ]
}